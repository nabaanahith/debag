<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBlack"
    android:layoutDirection="ltr"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/network_failure"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_margin="@dimen/card_corner_margin"
        android:padding="@dimen/card_corner_margin"
        app:cardBackgroundColor="@color/colorPrimaryDark"
        app:cardCornerRadius="@dimen/card_corner_radius"
        app:cardElevation="@dimen/card_corner_radius"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView

                android:id="@+id/description"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/chart_margin"
                android:padding="@dimen/chart_margin"
                android:textAlignment="center"
                android:textColor="@android:color/white"

                android:textSize="17sp" />

            <com.budiyev.android.circularprogressbar.CircularProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="@dimen/chart_margin"
                android:layout_weight="1"
                app:backgroundStrokeColor="@color/colorBlueTransparency"
                app:backgroundStrokeWidth="20dp"
                app:drawBackgroundStroke="true"
                app:foregroundStrokeColor="@color/colorAccent"
                app:foregroundStrokeWidth="20dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/tex_size"
            android:textStyle="bold" />

    </android.support.v7.widget.CardView>

</LinearLayout>