<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textDirection="ltr"
    android:background="@color/colorPrimary"
    android:elevation="8dp"
    android:orientation="vertical"
    android:padding="@dimen/margin"
    android:layoutDirection="ltr"
   >

    <TextView
        android:id="@+id/text"
        android:background="@color/colorPrimary"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/tex_size"
        android:padding="@dimen/margin"
        android:textAlignment="center"
        android:text="Resource Usage Information "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin"
        android:layout_marginTop="8dp"
        android:drawablePadding="@dimen/margin"
        android:text="2019/28/292"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/tex_size" />


    <TextView
        android:id="@+id/all_resource_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/tex_size"
        android:text="TotalMemory:\nUsedMemory: \nAvailableHeapSize: \nMaxHeapSize: \n resourceUsage.getMaxHeapSize()"/>

</LinearLayout>